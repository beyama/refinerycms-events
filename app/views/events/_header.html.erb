<% content_for :stylesheets do %>
  <%= stylesheet_link_tag('refinerycms-events') %>
  <%= stylesheet_link_tag('http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.13/themes/base/jquery-ui.css') %>
<% end %>

<% content_for :javascript_libraries do %>
  <%= javascript_include_tag 'http://ajax.googleapis.com/ajax/libs/jquery/1.6.1/jquery.min.js' %>
  <%= javascript_include_tag 'http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.13/jquery-ui.min.js' %>
  <%= javascript_include_tag 'http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.13/i18n/jquery-ui-i18n.min.js' %>
  <%= javascript_include_tag 'refinerycms-events' %>
  
  <% if @event && @event.location.show_map %>
    <%= javascript_include_tag 'http://maps.google.com/maps/api/js?sensor=true' %>
  <% end %>
<% end %>
