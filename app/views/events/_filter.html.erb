<%= form_tag events_path, :method => :get, :id => 'event_filter' do %>
  <% if Event.taggable? %>
    <%= label_tag :category, t('.category') %>
    <%= select_tag :category, options_for_select(Refinery::Events.categories{|c| [c, c]}, params[:category]) %>
  <% end %>

  <%= label_tag :search, t('.search') %>
  <%= search_field_tag :search, params[:search], :size => 14  %>
    
  <%= label_tag :start_at, t('.start_at')  %>
  <%= search_field_tag :start_at, params[:start_at], :size => 12, :locale => locale %>
    
  <%= label_tag :end_at, t('.end_at') %>
  <%= search_field_tag :end_at, params[:end_at], :size => 12 %>
    
  <%= label_tag :city, t('.city') %>
  <%= search_field_tag :city, params[:city], :size => 14  %>
  
  <%= submit_tag t('.submit'), :name => nil %>
<% end %>